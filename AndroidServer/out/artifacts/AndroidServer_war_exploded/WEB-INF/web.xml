<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>com.nightwingky.homeListView.HomeListViewServlet</servlet-name>
        <servlet-class>com.nightwingky.homeListView.HomeListViewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>com.nightwingky.homeListView.HomeListViewServlet</servlet-name>
        <url-pattern>/HomeListViewServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>com.nightwingky.shoppingcartListView.SCLvServlet</servlet-name>
        <servlet-class>com.nightwingky.shoppingcartListView.SCLvServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>com.nightwingky.shoppingcartListView.SCLvServlet</servlet-name>
        <url-pattern>/SCLvServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>com.nightwingky.itemDescription.ItemServlet</servlet-name>
        <servlet-class>com.nightwingky.itemDescription.ItemServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>com.nightwingky.itemDescription.ItemServlet</servlet-name>
        <url-pattern>/ItemServlet</url-pattern>
    </servlet-mapping>
</web-app>